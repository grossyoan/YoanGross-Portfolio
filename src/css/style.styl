*
    margin 0
    padding 0
    

html,body
    position relative
    top 0
    left 0
    width 100%
    height 100vh
    overflow hidden
    font-family: 'Staatliches', cursive;
    user-select none


.ctn-home 
    position absolute
    display flex 
    flex-flow column nowrap
    top 50%
    left 55%
    transform translateY(-50%)
    opacity 1 
    transition 1s ease all

.ctn-home h1
    font-size 5em

.ctn-home span
    font-size 1.7em
    margin-top -10px
    font-family: 'Roboto Mono', monospace;

.burger-menu-btn
    position absolute 
    top 40px 
    right 50px
    display flex
    justify-content space-between 
    align-items center
    flex-flow column nowrap
    height 20px
    cursor pointer

.burger-menu-btn:hover .bar-1
    transform rotate(45deg) translateY(12px)

.burger-menu-btn:hover .bar-2
    transform translateX(30px)
    opacity 0

.burger-menu-btn:hover .bar-3
    transform rotate(-45deg) translateY(-12px)

.burger-menu-btn .bar 
    height 2px
    width 30px
    background black
    border-radius 1px
    transition 0.3s ease all

.btn-home
    width 50px 
    height 50px
    border 2px black solid 
    border-radius 100%
    position relative
    cursor pointer 

.content-container
    perspective 800px
    position absolute
    top 55%
    left 15%
    transform translateY(-50%)
    height 60% 
    width 40%

video 
    width 100%
    height auto
    cursor pointer

.content-manager 
    position absolute
    display flex 
    flex-flow column nowrap
    opacity 0
    transition 0.5s ease all
    font-size 2em
    height 100% 
    width 100%
    z-index 1
    color black
    transform rotate3d(0,1,0,3deg) 
    will-change transform

.content-left 
    animation float-left 10s ease-in-out 0s infinite

.content-right 
    animation float-right 10s ease-in-out 0s infinite

.content-para   
    font-family: 'Roboto Mono', monospace;
    font-size: 0.6em
    margin-bottom 10px

.bar-btn
    position absolute
    top 50% 
    left 50% 
    transform translateY(-50%)
    width 35px 
    height 2px 
    background black
    transition 1s ease all

.btn-ctn
    width 400px 
    display flex 
    flex-flow row wrap
    align-items center
    justify-content space-between
    margin-top 30px

.numerotation
    width 300px 
    display flex
    justify-content space-between
    align-items center 
    margin-top 30px

.link-container
    position absolute
    bottom 50px
    left 50%
    transform: translate(-50%, 40%);
    width 60%
    height 10%
    display flex
    justify-content space-around
    align-items center
    flex-flow row nowrap
    z-index 2000
    overflow hidden
    opacity 0.5
    transition 0.5s ease all

.link-container:hover
    opacity 1

.link
    text-decoration none
    font-size 1em 
    font-weight 500
    color black
    font-family: 'Roboto Mono', monospace;

.link:visited
    color black
.cursor_hold
.num_bar 
    width 30px 
    height 2px 
    background black
    transition 0.5s ease transform
    transform scaleX(0)

.overflow
    width 60px 
    overflow hidden
.nb-num
    color #9a9a9a
    transition 1s ease all;
    transform-origin left 
    cursor pointer

.bottom-btn-content
    width 100%
    display flex
    justify-content space-between
    align-items center
    margin-top 5px

.sml-btn 
    cursor pointer

.home-ctn-btn
    display flex
    justify-content center 
    flex-flow column nowrap

.bar-btn-home
    width 100%
    height 2px
    background black 
    margin-top -5px

.btn-home:hover .bar-btn
    animation translate 1s ease-in-out 0s infinite normal forwards 
    text-decoration none

.overflow-txt
    overflow hidden 
    position relative
    height 40px
    width 400px

.txt-slider-ctn
    position absolute
    top 10%
    left 0
    display flex 
    flex-flow row nowrap
    transition 1s ease all;

.text-inner 
    width 400px

.cursor-hold
    position absolute 
    top 100%
    left 0
    color black 
    transition 0.5s ease opacity
.sml-bar
    width 100%
    height: 2px
    background black
    transform scaleX(0)
    transition 0.1s linear all
    transform-origin left  

.modal-container
    position absolute 
    width 100%
    height 100vh
    z-index 1000
    display none
    justify-content center 
    align-items center
    opacity 0
    transition 0.5s ease all

.big-nb
    position absolute 
    top -30%
    left -25%
    font-size 14em
    opacity 0.3
    color red
    z-index -1
    transform rotate3d(0,1,0,3deg)
    animation float-up 15s linear 0s infinite normal forwards 
    will-change transform

.modal-box
    position absolute
    top 0 
    left 0 
    width 100%
    height 100vh 
    background white 
    opacity 0.4
    z-index 1001

.modal-video
    width 80%
    height auto

.video-ctn 
    position relative
    z-index 1002
    display flex
    justify-content center 
    align-items center 

.cross-ctn 
    position absolute 
    right 10% 
    top -40px
    width 30px
    height 30px
    cursor pointer
    background url("../../static/img/cross.png")
    background-size contain
    opacity 0.8
    transition 1s ease all

.cross-ctn:hover
    opacity 1




@keyframes translate {
  0% {
    transform: translate(0%, -50%);
  }
  25%{
      transform: translate(100%, -50%);
      }
  26%{
    transform: translate(-200%, -50%) scaleX(0);
    }

  100% {
    transform: translate(0%, -50%) scaleX(1);
  }
}

@keyframes float-left {
  0% {
    transform rotate3d(0,1,0,3deg)
  }
  33%{
    transform rotate3d(0,1,0,2deg)
    }
  66%{
    transform rotate3d(0,1,0,4deg)
    }

  100% {
    transform rotate3d(0,1,0,3deg)
  }
}

@keyframes float-right {
  0% {
    transform rotate3d(0,1,0,3deg)
  }
  33%{
    transform rotate3d(0,1,0,2deg)
    }
  66%{
    transform rotate3d(0,1,0,4deg)
    }

  100% {
    transform rotate3d(0,1,0,3deg)
  }
}

@keyframes float-up {
  0% {
    transform translateY(0%) rotate3d(0,1,0,4deg)
  }
  33%{
    transform translateY(-1%) rotate3d(0,1,0,5deg)
    }
  66%{
    transform translateY(1%) rotate3d(0,1,0,3deg)
    }

  100% {
    transform translateY(0%) rotate3d(0,1,0,4deg)
  }
}